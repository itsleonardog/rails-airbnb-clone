<div class="container">
  <h1>5 Stars Accommodations</h1>
  <p>Check out our 5 out of 5-rated accommodations!</p>
  <%= link_to "All", accommodations_path, class: "btn btn-outline-secondary"  %>
  <%= link_to "Create", new_accommodation_path, class: "btn btn-outline-secondary" %>
  <hr>
  <div id="accommodations">
    <div class="cards">
      <% @accommodations.each do |accommodation| %>
        <div class="card-accommodation" onclick="window.location.href='<%= accommodation_path(accommodation) %>'">
          <img src="<%= accommodation.image_url_string %>" />
          <div class="card-accommodation-infos">
            <div>
              <h2><%= accommodation.name %></h2>
              <p>
                <%= accommodation.address %>
              </p>
            </div>
            <h2 class="card-accommodation-pricing">$99.99</h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
